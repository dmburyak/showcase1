
<%= simple_form_for @property_group,  defaults: { label_html: { class: 'label_class' } } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.input :name %>
    <%= f.input :main, as: :radio_buttons, :checked => ['No', false] %>
    <%= f.input :order %>
    <%= f.button :submit %>

<% end %>
