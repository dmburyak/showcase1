#demo.carousel.slide{"data-bs-ride" => "carousel"}

  .carousel-indicators
    - phone.images&.order(:order).each_with_index do | image, i |
      %button{"data-bs-slide-to" => "#{i}", "data-bs-target" => "#demo", :type => "button", class: ('active' if i == 0)}

  .carousel-inner
    - phone.images&.order(:order).each_with_index do | image, i |
      %div{class: ['carousel-item', ('active' if i == 0)]}
        != image_tag image.url, height: '100%'
          
  %button.carousel-control-prev{"data-bs-slide" => "prev", "data-bs-target" => "#demo", :type => "button"}
    %span.carousel-control-prev-icon
  %button.carousel-control-next{"data-bs-slide" => "next", "data-bs-target" => "#demo", :type => "button"}
    %span.carousel-control-next-icon
