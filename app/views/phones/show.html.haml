%p{style: 'color: green'}= notice

.row
  .col
    .card.shadow-sm
      .card-body

        .row
          .col-lg-7

            = render 'images/image_carousel', phone: @phone

          .col-lg-5
            .right-block
              = render 'phone_right_block', phone: @phone


        %hr
        .row
          %h5.text-primary.mb-3 Details
          .col-lg-6
            = render 'phone_details', phone: @phone, part: 1

          .col-lg-6
            = render 'phone_details', phone: @phone, part: 2

        %div
          = link_to 'Edit this phone', edit_phone_path(@phone)
          |
          = link_to 'Back to phones', phones_path
          |
          = link_to 'Destroy', phone_path(@phone),
            data: {turbo_method: :delete, turbo_confirm: 'DELETE? Are you sure?'}

