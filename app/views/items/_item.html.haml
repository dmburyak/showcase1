%div{id: "#{ dom_id item }"}
  %p
    %strong Name:
    = item.name
  %p
    %strong Description:
    = item.description
  %p
    %strong Price:
    = item.price
  %p
    %strong Url:
    = item.url
  %p
    %h3 Key features
    - key_features_values(item).each do | p_value |
      %p
        %strong #{p_value.property.name}:
        = p_value.property_data
