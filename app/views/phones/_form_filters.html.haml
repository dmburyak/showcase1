= form_with scope: :filter, url: filter_phones_path,
                      html: { method: :post } do |form|

  - Property.where(filter: [1..]).order(:filter).each do |property|

    = form.fields_for property.id.to_s do |f|

      .filter-group
        .filter-label= f.label property.name
        .filter-body= f.collection_check_boxes :property_values_data, PropertyValue.where(property_id: property.id),
                                    :property_data, :property_data
  .d-flex.justify-content-end.mt-1
    = form.submit 'Apply', class: 'btn btn-primary btn-sm'